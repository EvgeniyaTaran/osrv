        <TabItem Header="Компилятор">
            <StackPanel>
                <Menu>
                    <MenuItem Header=" Меню">
                        <MenuItem Header=" Открыть лог"></MenuItem>
                        <MenuItem Header="Выйти"></MenuItem>
                    </MenuItem>
                    
                </Menu>
                <TextBox Height =" 150" TextWrapping="Wrap" Text="TextBox" Margin="10"/>
